# Database connection (Neon PostgreSQL with asyncpg)
DATABASE_URL=postgresql+asyncpg://user:password@host/database?sslmode=require&channel_binding=require

# Better Auth JWT secret (obtain from authentication system)
BETTER_AUTH_SECRET=your-secret-key-here

# Better Auth base URL for fetching JWKS (in production, this should match your Vercel deployment)
BETTER_AUTH_URL=https://todo-web-application-rust.vercel.app

# API configuration
API_HOST=localhost
API_PORT=8000
